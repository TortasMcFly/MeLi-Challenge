<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lightGray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardElevation="0dp"
            app:cardCornerRadius="5dp">
            <ImageView
                android:id="@+id/imageViewProduct"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:background="#F6F6F6"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/textViewName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mattel Star Wars Baby Yoda Peluche"
                android:textColor="@color/black"
                android:textSize="@dimen/medium_text"/>

            <TextView
                android:id="@+id/textViewPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="$ 799"
                android:textColor="@color/black"
                android:textSize="@dimen/count_text"/>

            <TextView
                android:id="@+id/textViewInstallments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="en 12 x $ 81.12"
                android:textColor="@color/black"
                android:textSize="@dimen/small_text"/>

            <TextView
                android:id="@+id/textViewFull"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FULL"
                android:drawableLeft="@drawable/ic_flash"
                android:drawableTint="#28872C"
                android:layout_marginTop="10dp"
                android:textColor="#28872C"
                android:textStyle="bold|italic"
                android:textSize="@dimen/small_text" />

            <TextView
                android:id="@+id/textViewSeller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Vendido por Mattel"
                android:textSize="@dimen/small_text"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>